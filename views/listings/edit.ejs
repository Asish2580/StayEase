<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

        
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lebel">Title</label>
            <input name="listing[title]" type="text" value="<%= listing.title %> " class="form-control">
            <div class="invalid-feedback">Enter a valid title</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-lebel">Description</label>
            <textarea name="listing[description]" type="text"  class="form-control"> <%= listing.description %></textarea>
            <div class="invalid-feedback">Description is required</div>
        </div>
        <div class="mb-3 ">
            <img class="edit-image" src="<%= listing.image.url %>" alt="">
        </div>
        <div class="mb-3">
            <label for="image" class="form-lebel">New Upload image</label>
            <input type="file" name="listing[image]" class="form-control" >
            
        </div>
       
        <div class="row">
       <div class="mb-3 col-md-4">
        <label for="price" class="form-lebel">Price</label>
        <input name="listing[price]" type="number" value="<%= listing.price %>" class="form-control" >
        <div class="invalid-feedback">Enter valid price</div>
       </div>
       
        <div class="mb-3 col-md-8">
            <label for="location" class="form-lebel">Location</label> 
            <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control">
            <div class="invalid-feedback">Location is required</div>
        </div>
    </div>
        <div class="mb-3">
            <label for="country" class="form-lebel">Country</label>
            <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control">
            <div class="invalid-feedback">Country name is required</div>
        </div>
       <br>
        <button class="btn btn-dark edit-btn">Save</button>
       </form>
    </div>
</div>
</body>
